"""
Server instance of telepathyx server
"""


from telepathyx import TPXServer

def main():
    """ main function """
    addr = 'localhost'
    eth_port = 5005
    mgn_port = 5006
    debug_port = 5007
    save_logs = True

    myserver = TPXServer(addr, eth_port, mgn_port, debug_port)
    myserver.run()


if __name__ == "__main__":
    main()
